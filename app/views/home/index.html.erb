<div id="home-page">

	<ul class="videos">
		<% if @videos.count > 3 %>
			<% videos = @videos.shuffle %> 
			<% 4.times do |i| %>
				<% video = videos.delete_at(0) %>
				<li id="<%= i %>" class=<%= i.odd? ? "nudge-video-left" : "" %> ><iframe width="480" height="315" src="<%= video.construct_embed_url %>" frameborder="0" allowfullscreen></iframe></li>
			<% end %>
		<% end %>
	</ul>

	<ul class="memes">
		<% if @memes.count > 5 %>
			<% memes = @memes.shuffle %> 
			<% 6.times do |i| %>
				<% meme = memes.delete_at(0) %>
				<li class="meme"%>
					<span class="meme-text"><%= meme.text %></span>
					<span class="signature">~ <%= link_to meme.fountains.first.name, fountain_path(meme.fountains.first) %></span></br>					
					<span class="meme-tags">
					<% if meme.tags.count > 0 %>
						<strong>Tags: </strong> <% meme.tags.each do |tag| %>
							<%= link_to tag.name, tag_path(tag) %> 
						<% end %></span>
					<% end %>
				</li>
			<% end %>
		<% end %>
	</ul>
	
</div>
